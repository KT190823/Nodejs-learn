<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="w3-bar w3-border w3-light-grey">
    <a href="#" class="w3-bar-item w3-button w3-green">Home</a>
    <a href="/upload" class="w3-bar-item w3-button">Upload file</a>
  </div>
    <div class="w3-container">
        <h2>List users Table</h2>
      
        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].FirstName %></td>
              <td><%= dataUser[i].LastName %></td>
              <td class = "RUD">
                <a href="/details/<%=dataUser[i].id%>" target="_blank">Details</a>
                <form action="/delete-user" method="post">
                  <button type="submit">Delete</button>
                  <input type="text" hidden value="<%=dataUser[i].id%>" name="userId">
                </form>
                <form action="/edit-user/<%=dataUser[i].id%>" method="get">
                  <button type="submit">Edit</button>
                </form>
              </td>
            </tr>
         <% } %>
        </table>

        <div class="form-container">
          <form action="/create-new-user" method="post">
            <h2><b>Create user:</b></h2>
            <div>
              <label for="">First Name:</label>
              <br>
              <input type="text" name="FirstName">
            </div>

            <div>
              <label for="">Last Name:</label>
              <br>
              <input type="text" name="LastName">
            </div>

            <div>
              <label for="">Email:</label>
              <br>
              <input type="email" name="Email">
            </div>

            <div>
              <label for="">Address:</label>
              <br>
              <input type="text" name="Address">
            </div>

            <div>
              <button type="submit" class="form-btn">submit</button>
            </div>
          </form>
        </div>
    </div>
  </div>
</body>
</html>